@model IEnumerable<AmeenTraning.Models.Customer_Details>

@{
    var SR = 0;
}
@foreach (var item in Model)
{
    SR++;
    <tr>
        <td>
            @SR
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created_By)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modified_By)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_Modified)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company_Details.Name)
        </td>
        <td>
            <a href="/Inventory/Customer_Details/Edit?id=@item.Customer_Id" class="btn btn-info">Edit</a>
            <a href="/Inventory/Customer_Details/Delete?id=@item.Customer_Id" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}
























