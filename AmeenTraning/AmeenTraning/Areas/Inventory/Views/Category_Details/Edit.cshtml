@model AmeenTraning.Models.Category_Details
@{
    ViewBag.Title = "Edit";
}
<section>
    <div class="card mt-2">
        <div class="card-body">
            <h5 class="card-title">Edit Category</h5>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Category_Id)
                <div class="form-horizontal border p-5">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-outline">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mb-4", id = "Name" } })
                        <label class="form-label" for="Name">Name</label>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                            <a href="/Inventory/Category_Details" class="btn btn-warning">Back to List</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
