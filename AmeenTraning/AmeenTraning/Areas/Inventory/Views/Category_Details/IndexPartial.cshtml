@model IEnumerable<AmeenTraning.Models.Category_Details>

@{
    int SR = 0;
}
<table class="table">
    <thead>
        <tr>
            <th>SR</th>
            <th>
                Name
            </th>
            <th>
                Added by
            </th>
            <th>
                Modified by
            </th>
            <th>
                Date Created
            </th>
            <th>
                Date Created
            </th>
            <th>
                <button type="button" class="btn btn-primary btnadd">
                    Add
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            SR++;
            <tr>
                <td>@SR</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Added_By)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified_By)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Modified)
                </td>
                <td>
                    <button Id="@item.Category_Id" class="btn btnEdit btn-warning">Edit</button>
                    <a href="/Inventory/Category_Details/Delete?id=@item.Category_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>