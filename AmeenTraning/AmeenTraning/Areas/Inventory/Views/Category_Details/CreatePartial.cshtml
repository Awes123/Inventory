@model AmeenTraning.Models.Category_Details
@{
    ViewBag.Title = "Create";
}
<section>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal border p-5">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-outline">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mb-4", id = "Name" } })
                        <label class="form-label" for="Name">Name</label>
                    </div>
                </div>
            }
</section>