        }
        else if ($.isNumeric(other_Expense)) {
            sum = parseInt(grant_total + other_Expense);
            $('#total_amount').val(sum);
        }
        else if ($.isNumeric(Transcharges)) {
            sum = parseInt(grant_total + Transcharges);
            $('#total_amount').val(sum);
        }
        else
        {
            calc_total();
        }
        
        

