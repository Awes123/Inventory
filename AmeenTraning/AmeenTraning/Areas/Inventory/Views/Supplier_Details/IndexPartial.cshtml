@model IEnumerable<AmeenTraning.Models.Supplier_Details>

@{

    var Sr = 0;
}
<table class="table">
    <thead>
        <tr>
            <th>SR</th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Mobile
            </th>
            <th>
                Address
            </th>
            <th>
                Company Name
            </th>
            <th>
                Created By
            </th>
            <th>
                Modified By
            </th>
            <th>
                Date Created
            </th>
            <th>
                Date Modified
            </th>
            <th>
                <div>
                    <button type="button" class="btn btn-primary btnadd">
                        Add
                    </button>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            Sr++;
            <tr>
                <td>@Sr</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company_Details.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created_By)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified_By)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Modified)
                </td>


                <td>
                    <button Id="@item.Supplier_Id" class="btn btnEdit btn-warning">Edit</button>
                    <button Id="@item.Supplier_Id" class="btn btndelete btn-danger">Delete</button>
                </td>
            </tr>
        }

    </tbody>
</table>


