@model AmeenTraning.Models.Units_Details
@{
    ViewBag.Title = "Edit";
}
<section>
    <div class="card mt-2">
        <div class="card-body">
            <h4 class="card-title">Edit Units</h4>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="form-horizontal border p-3">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Unit_Id)

                    <div class="form-outline">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mb-4" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        <label class="form-label" for="Name">Name</label>
                    </div>
                    <div class="form-group p-1">
                        <div class="col-md-offset-2 col-md-10 ">
                            <input type="submit" value="Update" class="btn btn-success" />
                            <a href="/Inventory/Units_Details" class="btn btn-warning">Back to List</a>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</section>