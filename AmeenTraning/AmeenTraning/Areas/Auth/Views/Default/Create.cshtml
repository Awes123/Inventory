
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="row">
    @using (Html.BeginForm("Create", "Default", new { area = "Auth" }))
    { 
    <div class="form-group">
        <label class="col-md-2">
            Company
        </label>
        <select class="form-control" name="Company_Id">
            @foreach(AmeenTraning.Models.Company_Details item in ViewBag.Companies)
            {
                <option value="@item.Company_Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label class="col-md-2">
            Name
        </label>
        <input type="text" placeholder="Name" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="col-md-2">
            Email
        </label>
        <input type="email" placeholder="Email" name="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="col-md-2">
            Mobile
        </label>
        <input type="tel" placeholder="Mobile" name="Mobile" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="col-md-2">
            Address
        </label>
        <input type="text" placeholder="Address" name="Address" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="col-md-2">
            Age
        </label>
        <input type="number" min="18" placeholder="Age" name="Age" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="col-md-2">
            Gender
        </label>
        <input type="text" placeholder="Gender" name="Gender" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="col-md-2">
            Password
        </label>
        <input type="password" placeholder="Password" name="Password" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="col-md-2">

        </label>
        <input type="submit" value="Submit" class="btn btn-success" />
    </div>
    }
</div>